<%= form_for @newcomment do |f| %>
  <div class="commentformfield">
		<%= f.hidden_field :topic_id %>
    <%= f.text_area :content, :rows => 2 %>
  </div>
  <div class="field">  
	<%= f.hidden_field :ispro, value: false %>
  </div>

  <div class="commentformsubmit">	   
		<%= f.submit "Submit" %>	
  </div>

<% end %>